<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ColorPicker?>

<HBox xmlns:fx="http://javafx.com/fxml" styleClass="group" spacing="5" alignment="CENTER">
    <ComboBox fx:id="typeSelector" styleClass="select"/>

    <ColorPicker fx:id="colorPicker" styleClass="select"/>

    <Button fx:id="resetButton" mnemonicParsing="false" styleClass="btn, btn-icon">
        <graphic>
            <ImageView>
                <image>
                    <Image url="@../icons/UI/reload.svg" requestedWidth="20" requestedHeight="20"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</HBox>